<window id="0">
		<defaultcontrol always="true">1</defaultcontrol>
		<allowoverlay>no</allowoverlay>
		<controls>
				<include>CommonBackground</include>
				<control type="panel" id="1">
						<posx>255</posx>
						<posy>255</posy>
						<width>1280</width>
						<height>720</height>
						<onleft>50</onleft>
						<onright>50</onright>
						<onup>50</onup>
						<ondown>50</ondown>
						<viewtype>list</viewtype>
						<pagecontrol>61</pagecontrol>
						<scrolltime>200</scrolltime>
						<focusposition>3</focusposition>
						<orientation>-</orientation>
						<itemlayout height="130" width="256">
								<control type="image">
										<posx>2</posx>
										<posy>2</posy>
										<width>252</width>
										<height>126</height>
										<texture>ThumbNF.png</texture>
										<aspectratio>scale</aspectratio>
								</control>
								<control type="image">
										<posx>7</posx>
										<posy>7</posy>
										<width>242</width>
										<height>90</height>
										<texture>$INFO[Listitem.Icon]</texture>
										<bordertexture border="5">black-back.png</bordertexture>
										<bordersize>1</bordersize>
										<aspectratio>scale</aspectratio>
								</control>
								<control type="label">
										<posx>10</posx>
										<posy>100</posy>
										<width>236</width>
										<height>20</height>
										<font>font12</font>
										<textcolor>white</textcolor>
										<selectedcolor>blue</selectedcolor>
										<align>left</align>
										<aligny>center</aligny>
										<label>$INFO[ListItem.Label]</label>
								</control>
						</itemlayout>
						<focusedlayout height="256" width="190">
								<control type="image">
										<posx>2</posx>
										<posy>2</posy>
										<width>252</width>
										<height>126</height>
										<texture>ThumbFO.png</texture>
										<aspectratio>scale</aspectratio>
								</control>
								<control type="image">
										<posx>7</posx>
										<posy>7</posy>
										<width>242</width>
										<height>90</height>
										<texture>$INFO[Listitem.Icon]</texture>
										<bordertexture border="5">black-back.png</bordertexture>
										<bordersize>1</bordersize>
										<aspectratio>scale</aspectratio>
								</control>
								<control type="label">
										<posx>10</posx>
										<posy>100</posy>
										<width>236</width>
										<height>20</height>
										<font>font12</font>
										<textcolor>black</textcolor>
										<selectedcolor>blue2</selectedcolor>
										<align>left</align>
										<aligny>center</aligny>
										<label>$INFO[ListItem.Label]</label>
								</control>
						</focusedlayout>
						<content>
								<item>
										<label>Auto DVD2XBOX</label>
										<onclick>special://Skin/scripts/DVD2Xbox.py</onclick>
										<icon>Special://skin/tools/skins/Project_Mayhem_III/media/dvd2xbox_logo.png</icon>
								</item>
								<item>
										<label>Manual DVD2XBOX</label>
										<onclick>XBMC.RunXBE(Special://skin/tools/default.xbe)</onclick>
										<icon>Special://skin/tools/skins/Project_Mayhem_III/media/dvd2xbox_logo.png</icon>
								</item>
								<item>
										<label>Settings</label>
										<onclick>ActivateWindow(Settings)</onclick>
										<icon>defaultharddisk.png</icon>
								</item>
						</content>
				</control>
		</controls>
</window>