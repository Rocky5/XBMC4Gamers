<window id="101">
		<defaultcontrol>10</defaultcontrol>
		<controls>
				<control type="group">
						<visible>Window.IsVisible(0)</visible>
						<animation effect="slide" start="0,100" end="0,0" time="200">Windowopen</animation>
						<animation effect="slide" start="0,0" end="0,100" time="200">Windowclose</animation>
						<control type="label" id="1">
								<description>heading label</description>
								<posx>0</posx>
								<posy>0</posy>
								<width>0</width>
								<height>0</height>
								<font>-</font>
								<label>-</label>
								<visible>false</visible>
						</control>
						<control type="image">
								<description>Heading Background</description>
								<posx>0</posx>
								<posy>100r</posy>
								<width>1280</width>
								<height>100</height>
								<texture>footer.png</texture>
						</control>
						<control type="label">
								<description>heading label</description>
								<posx>40</posx>
								<posy>100r</posy>
								<width>1200</width>
								<height>40</height>
								<align>center</align>
								<aligny>center</aligny>
								<font>font22</font>
								<label>$INFO[Control.GetLabel(1)]</label>
								<textcolor>black</textcolor>
						</control>
						<control type="label" id="2">
								<description>dialog line 1</description>
								<posx>40</posx>
								<posy>60r</posy>
								<width>1200</width>
								<height>30</height>
								<align>center</align>
								<aligny>center</aligny>
								<label>-</label>
								<font>font13</font>
								<textcolor>black</textcolor>
						</control>
						<control type="progress">
								<description>Progressbar</description>
								<posx>200</posx>
								<posy>20r</posy>
								<width>880</width>
								<height>10</height>
								<info>System.Progressbar</info>
						</control>
				</control>
				<control type="group">
						<posx>290</posx>
						<posy>210</posy>
						<include>dialogeffect</include>
						<visible>!Window.IsActive(0) + !Window.IsActive(1)</visible>
						<control type="image">
								<description>background image</description>
								<posx>0</posx>
								<posy>0</posy>
								<width>700</width>
								<height>300</height>
								<texture border="40">DialogBack.png</texture>
						</control>
						<control type="label" id="1">
								<description>heading label</description>
								<posx>0</posx>
								<posy>0</posy>
								<width>0</width>
								<height>0</height>
								<font>-</font>
								<visible>false</visible>
						</control>
						<control type="image">
								<description>Heading Background</description>
								<posx>30</posx>
								<posy>35</posy>
								<width>640</width>
								<height>40</height>
								<texture border="5">ThumbFO.png</texture>
						</control>
						<control type="label">
								<description>heading label</description>
								<posx>40</posx>
								<posy>35</posy>
								<width>620</width>
								<height>40</height>
								<align>center</align>
								<aligny>center</aligny>
								<font>font18</font>
								<label>$INFO[Control.GetLabel(1)] $INFO[System.Progressbar,- ,%]</label>
								<textcolor>black</textcolor>
						</control>
						<control type="label" id="2">
								<description>dialog line 1</description>
								<posx>40</posx>
								<posy>85</posy>
								<width>620</width>
								<height>30</height>
								<align>center</align>
								<aligny>center</aligny>
								<label>-</label>
								<font>font12</font>
						</control>
						<control type="label" id="3">
								<description>dialog line 2</description>
								<posx>40</posx>
								<posy>115</posy>
								<width>620</width>
								<height>30</height>
								<align>center</align>
								<aligny>center</aligny>
								<label>-</label>
								<font>font12</font>
								<haspath>yes</haspath>
						</control>
						<control type="label" id="4">
								<description>dialog line 3</description>
								<posx>40</posx>
								<posy>145</posy>
								<width>620</width>
								<height>30</height>
								<align>center</align>
								<aligny>center</aligny>
								<label>-</label>
								<font>font12</font>
								<haspath>yes</haspath>
						</control>
						<control type="progress">
								<description>Progressbar</description>
								<posx>40</posx>
								<posy>184</posy>
								<width>620</width>
								<height>10</height>
								<info>System.Progressbar</info>
						</control>
						<control type="button" id="10">
								<description>Cancel button</description>
								<posx>250</posx>
								<posy>215</posy>
								<width>200</width>
								<height>35</height>
								<label>222</label>
								<textcolor>grey2</textcolor>
								<focusedcolor>white</focusedcolor>
								<align>center</align>
								<texturenofocus border="3">button-nofocus.png</texturenofocus>
								<texturefocus border="3">button-focus2.png</texturefocus>
								<onleft>10</onleft>
								<onright>10</onright>
								<onup>10</onup>
								<ondown>10</ondown>
								<visible>!Window.IsActive(2999)</visible>
						</control>
				</control>
				<!-- Debug Info -->
				<include>Debug</include>
		</controls>
</window>