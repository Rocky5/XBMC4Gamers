<!-- Variables.xml -->
<variable name="Backgrounds">
	<value condition="IsEmpty(skin.string(background_color)) + StringCompare(Skin.CurrentTheme,skindefault)">default\0.jpg</value>
	<value condition="!IsEmpty(skin.string(background_color)) + StringCompare(Skin.CurrentTheme,skindefault)">default\$INFO[skin.string(background_color)]</value>
	<value condition="IsEmpty(skin.string(background_color)) + !StringCompare(Skin.CurrentTheme,skindefault)">$INFO[Skin.CurrentTheme]\0.jpg</value>
	<value condition="!IsEmpty(skin.string(background_color)) + !StringCompare(Skin.CurrentTheme,skindefault)">$INFO[Skin.CurrentTheme]\$INFO[skin.string(background_color)]</value>
</variable>
<variable name="Alt_Label_Colour">
	<!-- all other windows -->
	<value condition="!Skin.HasSetting(AltTextColour) + !Window.IsVisible(7) + !Window.IsVisible(2999)">colour.$INFO[Container.Viewmode].label</value>
	<value condition="Skin.HasSetting(AltTextColour) + !Window.IsVisible(7) + !Window.IsVisible(2999)">colour.$INFO[Container.Viewmode].label2</value>
	<!-- system info window -->
	<value condition="!Skin.HasSetting(AltTextColour) + Window.IsVisible(7)">7_label</value>
	<value condition="Skin.HasSetting(AltTextColour) + Window.IsVisible(7)">7_label_alt</value>
</variable>
<variable name="Custom_BG_Colour">
	<value>FF$INFO[skin.string(Background_Custom_Color)]</value>
</variable>
<variable name="Custom_Gamers_Logo_Colour">
	<value condition="Skin.HasSetting(EnabledXBMC4GamersLogoColour)">FF$INFO[skin.string(XBMC4GamersLogoColour)]</value>
	<value condition="!Skin.HasSetting(EnabledXBMC4GamersLogoColour)">colour.variables.logo</value>
</variable>
<variable name="VolumeIconVar">
	<value condition="Player.Muted">windows\volume\mute.png</value>
	<value condition="IntegerGreaterThan(Control.GetLabel(29999),66)">windows\volume\volume.png</value>
	<value condition="IntegerGreaterThan(Control.GetLabel(29999),33)">windows\volume\volume2.png</value>
	<value condition="player.passthrough">windows\volume\volume.png</value>
	<value>windows\volume\volume1.png</value>
</variable>
<variable name="HomeMultiimage">
	<value condition="Skin.HasSetting(UseFanartFolder)">Q:\system\screensavers\fanart</value>
	<value>windows\home\multiimages</value>
</variable>
<variable name="View_Fanart">
	<value condition="ListItem.IsFolder + Skin.HasSetting(showfolderfanart)">$INFO[skin.string(FolderFanartPath)]\$INFO[ListItem.Label].jpg</value>
	<!-- resources disabled -->
	<value condition="!ListItem.IsFolder + !Skin.HasSetting(_resourcesenabled)">$INFO[listitem.Path,,]fanart.jpg</value>
	<!-- resources enabled -->
	<value condition="!ListItem.IsFolder + !IsEmpty(listitem.Synopsis_Fanart) + !Skin.HasSetting(fanartblur)">$INFO[listitem.Synopsis_Resources]artwork\fanart.jpg</value>
	<value condition="!ListItem.IsFolder + !IsEmpty(listitem.Synopsis_Fanart) + Skin.HasSetting(fanartblur)">$INFO[listitem.Synopsis_Resources]artwork\fanart-blur.jpg</value>
	<value condition="!ListItem.IsFolder + IsEmpty(listitem.Synopsis_Fanart) + !Skin.HasSetting(fanartblur)">no_fanart.jpg</value>
	<value condition="!ListItem.IsFolder + IsEmpty(listitem.Synopsis_Fanart) + Skin.HasSetting(fanartblur)">no_fanart_blur.jpg</value>
</variable>
<variable name="View_Fanart_Fog">
	<value condition="ListItem.IsFolder + Skin.HasSetting(showfolderfanart) + Skin.HasSetting(customfanartfog)">$INFO[skin.string(FolderFanartPath)]\$INFO[ListItem.Label]_fog.jpg</value>
	<!-- resources enabled -->
	<value condition="!ListItem.IsFolder + !IsEmpty(listitem.Synopsis_Fanart) + Skin.HasSetting(customfanartfog)">$INFO[listitem.Synopsis_Resources]artwork\fog.jpg</value>
	<value condition="!ListItem.IsFolder + IsEmpty(listitem.Synopsis_Fanart) + Skin.HasSetting(customfanartfog)">no_fog.jpg</value>
</variable>
