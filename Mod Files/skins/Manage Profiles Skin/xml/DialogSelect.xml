<window type="window" id="2000">
		<defaultcontrol always="true">3</defaultcontrol>
		<allowoverlay>no</allowoverlay>
		<coordinates>
				<system>1</system>
				<left>320</left>
				<top>10</top>
		</coordinates>
		<include>Dialog.Effect.Zoom.Fast</include>
		<controls>
				<control type="group">
						<!-- Image Preview -->
						<left>270</left>
						<top>28</top>
						<visible>Skin.HasSetting(SelectPreviewMode) | Window.IsVisible(1901)</visible>
						<animation effect="slide" start="-270,0" end="0,0" time="300">Visible</animation>
						<animation effect="slide" start="0,0" end="-270,0" time="300">Hidden</animation>
						<control type="image">
								<left>30</left>
								<top>34</top>
								<width>580</width>
								<height>580</height>
								<texture border="20,20,20,20">thumbnofo.png</texture>
						</control>
						<control type="image">
								<description>Heading Background</description>
								<left>30</left>
								<top>34</top>
								<width>580</width>
								<height>40</height>
								<texture border="20,20,20,20">thumbfo.png</texture>
						</control>
						<control type="label">
								<description>Heading label</description>
								<left>40</left>
								<top>40</top>
								<width>560</width>
								<height>30</height>
								<align>center</align>
								<aligny>center</aligny>
								<font>size_21_bold</font>
								<label>Preview</label>
								<textcolor>2000_header_label</textcolor>
						</control>
						<control type="image">
								<description>Current Icon image</description>
								<left>40</left>
								<top>90</top>
								<width>550</width>
								<height>480</height>
								<aspectratio>keep</aspectratio>
								<texture>Special://skin/extras/urldownloader themes/previews/$INFO[Container(3).ListItem.Label].jpg</texture>
								<bordertexture border="5">white-back.png</bordertexture>
								<bordersize>1</bordersize>
								<visible>Window.IsVisible(1901)</visible>
						</control>
						<control type="image">
								<description>Current Icon image</description>
								<left>40</left>
								<top>90</top>
								<width>550</width>
								<height>480</height>
								<aspectratio>keep</aspectratio>
								<texture>Special://skin/extras/themes/previews/$INFO[Container(3).ListItem.Label].jpg</texture>
								<bordertexture border="5">white-back.png</bordertexture>
								<bordersize>1</bordersize>
								<visible>Window.IsVisible(1111) + !Skin.HasSetting(SelectSplash)</visible>
						</control>
						<control type="image">
								<description>Current Icon image</description>
								<left>40</left>
								<top>90</top>
								<width>550</width>
								<height>480</height>
								<aspectratio>keep</aspectratio>
								<texture>Special://skin/extras/themes/splashes/thumbs/$INFO[Container(3).ListItem.Label].jpg</texture>
								<bordertexture border="5">white-back.png</bordertexture>
								<bordersize>1</bordersize>
								<visible>Window.IsVisible(1111) + Skin.HasSetting(SelectSplash)</visible>
						</control>
				</control>
				<control type="group">
						<top>28</top>
						<!-- Browser pane -->
						<animation effect="slide" start="0,0" end="-275,0" time="300" condition="Skin.HasSetting(SelectPreviewMode) | Window.IsVisible(1901)">Conditional</animation>
						<control type="image">
								<description>background image</description>
								<left>30</left>
								<top>34</top>
								<width>550</width>
								<height>580</height>
								<texture border="20,20,20,20">thumbnofo.png</texture>
								<animation effect="fade" start="90" end="90" time="0" condition="Window.IsVisible(Visualisation)">Conditional</animation>
						</control>
						<control type="image">
								<description>Heading Background</description>
								<left>30</left>
								<top>34</top>
								<width>550</width>
								<height>40</height>
								<texture border="20,20,20,20">thumbfo.png</texture>
						</control>
						<control type="label" id="1">
								<description>heading label</description>
								<left>40</left>
								<top>35</top>
								<width>510</width>
								<height>40</height>
								<align>center</align>
								<aligny>center</aligny>
								<font>size_21_bold</font>
								<label>13406</label>
								<textcolor>2000_header_label</textcolor>
						</control>
						<control type="list" id="3">
								<left>45</left>
								<top>90</top>
								<width>500</width>
								<height>480</height>
								<onup>3</onup>
								<ondown>3</ondown>
								<onleft>5</onleft>
								<onright>61</onright>
								<pagecontrol>61</pagecontrol>
								<scrolltime>200</scrolltime>
								<itemlayout height="40">
										<control type="image">
												<left>0</left>
												<top>0</top>
												<width>500</width>
												<height>35</height>
												<texture border="5">button-nofocus.png</texture>
										</control>
										<control type="label">
												<left>10</left>
												<top>-1</top>
												<width>480</width>
												<height>35</height>
												<font>size_20</font>
												<align>left</align>
												<aligny>center</aligny>
												<textcolor>126_label</textcolor>
												<selectedcolor>126_label_selected</selectedcolor>
												<info>ListItem.Label</info>
										</control>
								</itemlayout>
								<focusedlayout height="40">
										<control type="image">
												<left>0</left>
												<top>0</top>
												<width>500</width>
												<height>35</height>
												<texture border="5">button-focus2.png</texture>
										</control>
										<control type="label">
												<left>10</left>
												<top>-1</top>
												<width>480</width>
												<height>35</height>
												<font>size_20</font>
												<align>left</align>
												<aligny>center</aligny>
												<textcolor>126_label</textcolor>
												<selectedcolor>126_label_selected</selectedcolor>
												<info>ListItem.Label</info>
										</control>
								</focusedlayout>
						</control>
				</control>
				<control type="group">
						<top>28</top>
						<visible>Control.IsVisible(3)</visible>
						<animation effect="slide" start="0,0" end="-275,0" time="300" condition="Skin.HasSetting(SelectPreviewMode) | Window.IsVisible(1901)">Conditional</animation>
						<control type="scrollbar" id="61">
								<left>550</left>
								<top>90</top>
								<width>20</width>
								<height>475</height>
								<texturesliderbackground border="2,2,2,2">scrollbar_bar_back2.png</texturesliderbackground>
								<texturesliderbar border="2,16,2,16">scrollbar_bar.png</texturesliderbar>
								<texturesliderbarfocus border="2,16,2,16">scrollbar_bar_focus.png</texturesliderbarfocus>
								<textureslidernib>scrollbar_nib.png</textureslidernib>
								<textureslidernibfocus>scrollbar_nib.png</textureslidernibfocus>
								<onleft>3</onleft>
								<onright>3</onright>
								<ondown>61</ondown>
								<onup>61</onup>
								<showonepage>false</showonepage>
								<orientation>vertical</orientation>
						</control>
						<control type="label">
								<description>number of files/pages in list text label</description>
								<left>30</left>
								<top>570</top>
								<width>550</width>
								<height>35</height>
								<font>size_20</font>
								<align>center</align>
								<aligny>center</aligny>
								<scroll>true</scroll>
								<textcolor>2000_label</textcolor>
								<label>($INFO[Container(3).NumItems]) $LOCALIZE[31211] - $LOCALIZE[31210] ($INFO[Container(3).CurrentPage]/$INFO[Container(3).NumPages])</label>
						</control>
				</control>
				<control type="button" id="5">
						<description>OK button</description>
						<left>30</left>
						<top>614</top>
						<width>550</width>
						<height>40</height>
						<label>186</label>
						<font>size_20</font>
						<textcolor>2000_button_label</textcolor>
						<focusedcolor>2000_button_label_focus</focusedcolor>
						<disabledcolor>2000_button_label</disabledcolor>
						<align>center</align>
						<texturenofocus border="3">thumbnf.png</texturenofocus>
						<texturefocus border="3">thumbfo.png</texturefocus>
						<onleft>3</onleft>
						<onright>61</onright>
						<onup>3</onup>
						<ondown>3</ondown>
						<animation effect="slide" start="0,0" end="0,-120" time="0" condition="Control.IsVisible(6)">Conditional</animation>
				</control>
		</controls>
</window>